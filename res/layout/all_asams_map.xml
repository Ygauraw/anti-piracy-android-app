<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
     
    <TextView android:id="@+id/all_asams_map_query_feedback_text_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:paddingLeft="10dp"
        />
    
    <fragment android:id="@+id/all_asams_map_map_view_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.google.android.gms.maps.SupportMapFragment"
        />
    
    <ImageButton
        android:id="@+id/map_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/layer_button_desc"
        android:background="@drawable/google_maps_button"
        android:src="@drawable/map" />
    
</RelativeLayout>